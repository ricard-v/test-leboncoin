<?xml version="1.0" encoding="utf-8"?>

<!--    Some explanations. Usually, for this type of layout, it's strongly recommended to use a single TextView with a drawable
        However, for sticky header to work (see AlbumsListDecoration.kt), we need to use an ImageView otherwise, the header won't display the TextView's drawable -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="?android:colorBackground"
    tools:context=".view.albumslist.AlbumsListAdapter$AlbumOthersHeaderItemViewHolder">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        app:tint="?android:attr/textColorSecondary"
        app:srcCompat="@drawable/ic_un_favorite"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:text="@string/fragment_album_lists_header_others_albums"/>

</LinearLayout>

